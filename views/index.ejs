<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" type="image/png" href="/images/noticeboard.png">
    <link rel="stylesheet" href="/styles.css">
    <script defer src="/buttons.js"></script>
  </head>
  <body>
    <!-- Header -->
    <header tabindex="0" id="page-header">
      <h1>Notice Board</h1>
    </header>

    <!-- Main -->
    <main>

      <div class="blur-overlay">

        <div class="msg-board">

          <!-- <h2 class="msg-board__title">Requests</h2> -->

          <div class="msg-board__post-area">

              <% for (let i = 0; i < messages.length; i++) { %>
                

                  <a class="msg-board__post-link" href="/message?msgId=<%= messages[i].msgId %>">
                    <div class="msg-board__post">
                      <p class="msg-board__content"><%= messages[i].post%></p>
                      <div class="msg-board__details">
                        <p class="msg-board__user"><%= messages[i].user%>,</p>
                        <span class="msg-board__time"><%= messages[i].added%></span>
                      </div>
                    </div>
                  </a>
                  
              
              <% } %>            
            
          </div>

        </div>

        <!-- Create Request From button -->
        <div class="show-form-button-wrapper">
          <button class="show-form-button" aria-label="show request form">
            <img alt="Show request form" src="/images/si_glyph_pen_nib.svg">
          </button>
        </div>

      </div>

      <%- include('form.ejs') %>



    </main>

    <!-- Footer -->
    <footer id="page-footer">
      <span class="dev-name">Creator: Inquntum</span>

      <a target="_blank" class="dev-github" href="https://github.com/InfamousTheif/Notice-Board-Odin-Project"><img alt="GitHub-Icon" src="/images/github-mark/github-mark-white.png"></a>
      
      <div class="credits-column">
        <span class="credits-column__title">Credits:</span><br>
        <a target="_blank" href="https://www.onlinewebfonts.com/icon/262477">Pen Icon</a><br>
        <a target="_blank" href="https://www.flaticon.com/free-icon/noticeboard_3233538"> Notice Board Icon</a>
      </div>
    </footer>
  </body>
</html>